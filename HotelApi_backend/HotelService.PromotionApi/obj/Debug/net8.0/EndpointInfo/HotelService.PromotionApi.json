{
  "openapi": "3.0.1",
  "info": {
    "title": "HotelService API",
    "version": "v1"
  },
  "paths": {
    "/api/promotions": {
      "get": {
        "tags": [
          "Promotion"
        ],
        "summary": "Zwraca listę wszystkich promocji.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Read"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Read"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Read"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Promotion"
        ],
        "summary": "Tworzy nową promocję.",
        "requestBody": {
          "description": "Obiekt zawierający dane promocji do utworzenia.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Create"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Create"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Create"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/promotions/id/{id}": {
      "get": {
        "tags": [
          "Promotion"
        ],
        "summary": "Pobiera promocję na podstawie identyfikatora.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identyfikator promocji.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/promotions/{code}": {
      "get": {
        "tags": [
          "Promotion"
        ],
        "summary": "Pobiera promocję na podstawie kodu.",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "description": "Kod promocji (np. \"SUMMER\").",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/promotions/{id}": {
      "delete": {
        "tags": [
          "Promotion"
        ],
        "summary": "Usuwa promocję na podstawie identyfikatora.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identyfikator promocji.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Create": {
        "required": [
          "code",
          "discountPercentage"
        ],
        "type": "object",
        "properties": {
          "code": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "discountPercentage": {
            "maximum": 100,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "validUntil": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Read": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "code": {
            "type": "string",
            "nullable": true
          },
          "discountPercentage": {
            "type": "number",
            "format": "double"
          },
          "validUntil": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}